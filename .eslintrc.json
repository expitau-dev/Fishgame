{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "import/extensions": [ "error", "ignorePackages", {
                "js": "allowNamedExports",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": false,
            "variables": true,
            "allowNamedExports": false
        }],
        "no-restricted-globals": "off",
        "max-len": "off",
        "no-param-reassign": "off",
        "no-nested-ternary": "off",
        "import/prefer-default-export": "off"
    }
}
